{
  "compilerOptions": {
      "incremental": true,
    "outDir": "dist",
    "rootDirs": ["src", "tests"],
    "target": "es2021",
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@/tests/*": ["../tests/*"]
    },
    "strict": true,
    "noImplicitOverride": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    // "lib": ["es2021"],
    "allowJs": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false, // remove later
    "typeRoots": [
      "@types",
      "./node_modules/@types"
    ],
    "resolveJsonModule": true,
  },
  "exclude": [
    "node_modules",
    "build"
  ],
   "include": ["src", "tests"]
}
